@model Homish.EntityLayer.AboutUs
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Hakkımızda Sayfası Güncelleme</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <div class="col-sm">
                        @Html.HiddenFor(x=>x.Id)
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Başlık 1</label>
                            <input type="text" asp-for="Title1" class="form-control" id="basic-default-fullname" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Resim 1 URL</label>
                            <input type="text" asp-for="Image1" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Başlık 2</label>
                            <input type="text" asp-for="Title2" class="form-control" id="basic-default-company" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Resim 2 URL</label>
                            <input type="text" asp-for="Image2" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Açıklama 1</label>
                        <textarea row="10" cols="5" type="text" asp-for="Desciription" class="form-control" id="basic-default-company"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Açıklama 2</label>
                        <textarea row="10" cols="5" asp-for="Description1" class="form-control" id="basic-default-company"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Açıklama 3</label>
                        <textarea row="10" cols="5" asp-for="Description2" class="form-control" id="basic-default-company" ></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-refresh"></span> Güncelle</button>  
            </form>
        </div>
    </div>
</div>
