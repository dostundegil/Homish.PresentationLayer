@model Homish.EntityLayer.PropertiesByArea
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Şehirlere Göre Mülk Güncelleme</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <div class="col-sm">
                        @Html.HiddenFor(x=>x.Id)
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Şehir</label>
                            <input type="text" asp-for="City" class="form-control" id="basic-default-fullname" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Miktar</label>
                            <input type="text" asp-for="Amount" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Resim URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Açıklama</label>
                        <textarea row="10" cols="5" type="text" asp-for="SmallDescription" class="form-control" id="basic-default-company"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-refresh"></span> Güncelle</button>
            </form>
        </div>
    </div>
</div>
