@model List<Homish.EntityLayer.PropertiesByArea>
@{
    ViewData["Title"] = "Traversal | Admin Rotalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="card">
        <h5 class="card-header bg-primary text-white">Şehirlere Göre Mülkler</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Şehir</th>
                        <th>Miktar</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.City</td>
                            <td>@item.Amount</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" onclick="deleteItem('/AdminPropertiesByArea/Delete/@item.Id')" href="#"><i class="bx bx-trash me-1 text-danger"></i> Sil</a>
                                        <a class="dropdown-item" href="/AdminPropertiesByArea/Edit/@item.Id"><i class="bx bx-edit-alt me-1 text-warning"></i> Güncelle</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a href="/AdminPropertiesByArea/Add/" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span>Yeni Mülk</a>
    </div>
</div>