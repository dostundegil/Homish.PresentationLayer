@model Homish.EntityLayer.Property
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Mülk Ekleme </h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" id="basic-default-fullname" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Fiyat</label>
                            <input type="text" asp-for="Price" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Yatak Odası Sayısı</label>
                            <input type="text" asp-for="BedroomCount" class="form-control" id="basic-default-company" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Banyo Sayısı</label>
                            <input type="text" asp-for="BathroomCount" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">m2</label>
                        <input type="text" asp-for="Square" class="form-control" id="basic-default-company" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Açıklama</label>
                        <textarea row="10" cols="5" type="text" asp-for="Description" class="form-control" id="basic-default-company"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span> Ekle</button>
            </form>
        </div>
    </div>
</div>

