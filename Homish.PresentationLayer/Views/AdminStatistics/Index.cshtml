@model Homish.EntityLayer.Statistics
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">İstatistik Güncelleme</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <div class="col-sm">
                        @Html.HiddenFor(x=>x.Id)
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Özel Ürünler</label>
                            <input type="text" asp-for="CustomProducts" class="form-control" id="basic-default-fullname" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Çiftliklerimiz</label>
                            <input type="text" asp-for="OurFarms" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Mutlu Müşteriler</label>
                            <input type="text" asp-for="HappCustomers" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                   
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-refresh"></span> Güncelle</button>
            </form>
        </div>
    </div>
</div>

